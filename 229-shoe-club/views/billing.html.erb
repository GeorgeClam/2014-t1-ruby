<%= error_messages_for @customer %>

<h1>Page of 3 of 4: Billing</h1>
<p>
<h2>Enter billing address</h2>
<%= check_box_tag "same_as_ship", "on", @customer.bill_address_same_as_ship %> Same as shipping address
</p>
<p>
<%= label_tag "address1" %>
<br>
<%= text_field_tag "address1", @customer.bill_address1 %>
</p>
<p>
<%= label_tag "city" %>
<br>
<%= text_field_tag "city", @customer.bill_city %>
</p>
<p>
<%= label_tag "state" %>
<br>
<%= select_tag "state", options_from_collection_for_select(@u_s_states, :abbreviation, :name, @customer.bill_state), prompt: "State" %>
</p>
<p>
<%= label_tag "zip Code" %>
<br>
<%= text_field_tag "zip_code", @customer.bill_zip_code %>
</p>
<%= submit_tag "Go back" %> or <%= submit_tag "Continue" %>

