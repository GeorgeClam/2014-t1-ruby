<h1>Edit president</h1>

  <p>
    <%= label_tag "name" %>
  <br>
    <%= text_field_tag "name", @president.name %>
  </p>
  
  <p>
    <%= label_tag "biography" %>
  <br>
    <%= text_area_tag "biography", @president.biography %>
  </p>
  
  <p>
    <%= label_tag "ended_term_early" %>
  <br>
    <%= check_box_tag "ended_term_early", "on", @president.ended_term_early %>
  </p>

  <p>
    <%= label_tag "party" %>
  <br>
    <%= radio_button_tag "party", "democrat", @president.party == "democrat" %>
    <%= label_tag "party_democrat", "democrat", class: "radio-label" %>
    <%= radio_button_tag "party", "whig", @president.party == "whig" %>
    <%= label_tag "party_whig", "whig", class: "radio-label" %>
    <%= radio_button_tag "party", "republican", @president.party == "republican" %> 
    <%= label_tag "party_republican", "republican", class: "radio-label" %>
  </p>

  <p>
    <%= label_tag "former_occupation" %>
  <br>
    <% select_tag "former_occupation", options_for_select(["lawyer", "clothing retailer", "soldier", "city planner"], @president.former_occupation), prompt: "Former Occupation" %>
  </p>

  <p>
    <%= label_tag "birth_state_id" %>
  <br>
    <%= select_tag "birth_state_id", options_from_collection_for_select(State.all, :id, :name, @president.birth_state_id), prompt: "Birth State" %>
  </p>
  
  <p>
    <%= submit_tag "Revise History" %>
  </p>